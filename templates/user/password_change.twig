{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
{% block body %}
    <div class="page-title"><h1>Modification mot de passe</h1></div>
    <section>
        <form action="{{ path("verify_password") }}" method="post">
            <div>
                <label for="password">mot de passe</label>
                <input type="password" name="new" id="password">
            </div>
            <div>
                <label for="confirm_password">confirmation</label>
                <input type="password" name="new_confirm" id="confirm_password">
            </div>

            <input type="submit" value="save" class="submit">
        </form>
        {% if error is defined %}
        {{ error }}
        {% endif %}
    </section>
{% endblock %}